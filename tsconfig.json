{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "commonjs",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"declaration": true,
		"noEmit": true,
		"jsx": "preserve",
		"outDir": "./lib",
		"strict": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
